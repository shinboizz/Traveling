@model List<Model.EF.Slide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<!-- Begin Slider With Banner Area -->
<div class="slider-with-banner">
    <div class="container">
        <div class="row">
            <!-- Begin Slider Area -->
            <div class="col-lg-8 col-md-8">
                <div class="slider-area pt-sm-30 pt-xs-30">
                    <div class="slider-active owl-carousel">
                        @foreach (var slide in Model)
                        {
                            <!-- Begin Single Slide Area -->
                            <div class="single-slide align-center-left animation-style-01 bg-1">
                                <img src="~/Content/CustomerContent/images/slider/@slide.Anh" />
                                <div class="slider-progress"></div>
                                <div class="slider-content">
                                    <h5>Sale Offer <span>-20% Off</span> This Week</h5>
                                    <h1>You'll fall in love with India | India</h1>
                                    <p>Explore India from Kashmir to Kaniyakumari</p>
                                    <h3 class="slide-btn">Starting at <span>$200</span></h3>
                                    <div class="default-btn slide-btn">
                                        <a class="links" href="shop-left-sidebar.html">Booking Now</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Slide Area End Here -->
                        }
                    </div>
                </div>
            </div>
            <!-- Slider Area End Here -->
            <!-- Begin Li Banner Area -->
            <div class="col-lg-4 col-md-4 text-center pt-sm-30 pt-xs-30">
                <div style="display: inline;">
                    <div style=" border-bottom: 2px solid #C7C7AB; background-color: #246996;">
                        <h1 style="text-shadow: 1px 1px 1px rgb(221, 222, 229); margin: 20px 0;color: sandybrown;">List of featured events in India<br /><span style=" font-size: 0.7em; text-shadow: 1px 1px 1px rgb(100, 100, 100);">- Welcome to India -</span></h1>
                        <span><h2 class="ont-family: 'Roboto', sans-serif;font-weight: bold;font-size: 1.6em;">Bulletin Board</h2></span>
                        <div class="li-banner">
                            <a href="https://www.holidify.com/places/goa/basilica-of-bom-jesus-sightseeing-1840.html">
                                <img src="~/Content/CustomerContent/images/banner/home1.jpeg" alt="">
                                <h5 class="alert-success">Basilica of Bom Jesus</h5>
                            </a>
                        </div>
                        <div class="li-banner">
                            <a href="https://www.timeanddate.com/holidays/india/holi">
                                <img src="~/Content/CustomerContent/images/banner/home2.jpg" alt="">
                                <h5 class="alert-success">Holi, often referred to as the "Festival of Colors"</h5>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Li Banner Area End Here -->
            </div>
        </div>
    </div>
    <!-- Slider With Banner Area End Here -->
    <!-- Begin Static Top Area -->
    <div class="static-top-wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="static-top-content mt-sm-30">
                        Gift Special: Gift every single day on Weekends - New Coupon code "
                        <span>LimupaSaleoff</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Static Top Area End Here -->
    <!-- product-area start -->
    <div class="product-area pt-55 pb-25 pt-xs-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="li-product-tab">
                        <ul class="nav li-product-menu">
                            <li><a class="active" data-toggle="tab" href="#li-new-product"><span>Tour</span></a></li>
                            <li><a data-toggle="tab" href="#li-bestseller-product"><span>Hotel</span></a></li>
                            <li><a data-toggle="tab" href="#li-featured-product"><span>Travel items</span></a></li>
                        </ul>
                    </div>
                    <!-- Begin Li's Tab Menu Content Area -->
                </div>
            </div>
            <div class="tab-content">
                @*Sản phẩm mới*@
                @Html.Action("NewsProduct", "Home", new { @status = 1 })
                @*Sản phẩm bán chạy*@
                @Html.Action("BestSeller", "Home", new { @status = 2 })
                @*Sản phẩm nổi bật*@
                @Html.Action("Featured", "Home", new { @status = 3 })
            </div>
        </div>
    </div>
    <!-- Begin Li's Tab Menu Content Area -->
    <div class="container">
        <div class="heading_container">
            <h2>
                OFFERS
            </h2>
            <p>
                List of best offers
            </p>
        </div>
        <!-- Begin Li's Tab Menu Content Area -->
    </div>
</div>
<!-- product-area end -->
<!-- Begin Li's Static Banner Area -->
