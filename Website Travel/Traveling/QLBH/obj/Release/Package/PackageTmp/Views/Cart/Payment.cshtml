                                        <tr>
                                            <th class="cart-product-name">Products</th>
                                            <th class="cart-product-total">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="cart_item">
                                                <td class="cart-product-name">@item.Product.TenSP<strong class="product-quantity"> × @item.Quantity</strong></td>
                                                <td class="cart-product-total"><span class="amount">@(item.Product.DonGia.GetValueOrDefault(0) * item.Quantity)</span></td>
