@model List<Model.EF.Slide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<!-- Begin Slider With Banner Area -->
<div class="slider-with-banner">
    <div class="container">
        <div class="row">
            <!-- Begin Slider Area -->
            <div class="col-lg-8 col-md-8">
                <div class="slider-area pt-sm-30 pt-xs-30">
                    <div class="slider-active owl-carousel">
                        @foreach (var slide in Model)
                        {
                            <!-- Begin Single Slide Area -->
                            <div class="single-slide align-center-left animation-style-01 bg-1">
                                <img src="~/Content/CustomerContent/images/slider/@slide.Anh" />
                                <div class="slider-progress"></div>
                                <div class="slider-content">
                                    <h5>Sale Offer <span>Giảm giá 20% </span> Vào mùa hè này</h5>
                                    <h1>Khám phá du lịch Trong nước || Ngoài nước</h1>
                                    <p>Những địa điểm du lịch thú vị</p>
                                    <h3 class="slide-btn">Chỉ với  <span>2.000.000 VND</span></h3>
                                    <div class="default-btn slide-btn">
                                        <a class="links" href="#product">Đặt hàng ngay</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Slide Area End Here -->
                        }
                    </div>
                </div>
            </div>
            <!-- Slider Area End Here -->
            <!-- Begin Li Banner Area -->
            <div class="col-lg-4 col-md-4 text-center pt-sm-30 pt-xs-30">
                <div style="display: inline;">
                    <div style=" border-bottom: 2px solid #C7C7AB; background-color: #246996;">
                        <h1 style="text-shadow: 1px 1px 1px rgb(221, 222, 229); margin: 20px 0;color: sandybrown;">Danh sách tin tức về các địa điểm du lịch<br /><span style=" font-size: 0.7em; text-shadow: 1px 1px 1px rgb(100, 100, 100);">- Chào mừng đến với chúng tôi -</span></h1>
                        <span><h2 class="ont-family: 'Roboto', sans-serif;font-weight: bold;font-size: 1.6em;">Bảng Thông Tin</h2></span>
                        <div class="li-banner">
                            <a href="https://vnexpress.net/goi-y-trai-nghiem-du-lich-hue-4186026.htmll">
                                <img src="~/Content/CustomerContent/images/banner/danhthanghue.png" alt="">
                                <h5 class="alert-success">Huế là điểm du lịch được nhiều người yêu thích.</h5>
                            </a>
                        </div>
                        <div class="li-banner">
                            <a href="http://dulich24.com.vn/du-lich-thanh-pho-ha-long/vinh-ha-long-id-6528">
                                <img src="~/Content/CustomerContent/images/banner/vinhhalong.png" alt="">
                                <h5 class="alert-success"> Vịnh Hạ Long được UNESCO công nhận là di sản thiên nhiên thế giới . "</h5>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Li Banner Area End Here -->
            </div>
        </div>
    </div>
    <!-- Slider With Banner Area End Here -->
    <!-- Begin Static Top Area -->
   
    <!-- Static Top Area End Here -->
    <!-- product-area start -->
    <div id="product">
        <div class="product-area pt-55 pb-25 pt-xs-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="li-product-tab">
                            <ul class="nav li-product-menu">
                                <li><a class="active" data-toggle="tab" href="#li-new-product"><span>Tour-Trong Nước</span></a></li>
                                <li><a data-toggle="tab" href="#li-bestseller-product"><span>Tour-Ngoài Nước</span></a></li>
                                <li><a data-toggle="tab" href="#li-featured-product"><span>Khách sạn</span></a></li>
                                <li><a data-toggle="tab" href="#li-item-product"><span>Vật Dụng</span></a></li>
                            </ul>
                        </div>
                        <!-- Begin Li's Tab Menu Content Area -->
                    </div>
                </div>
                <div class="tab-content">
                    @*Sản phẩm mới*@
                    @Html.Action("NewsProduct", "Home", new { @status = 1 })
                    @*Sản phẩm bán chạy*@
                    @Html.Action("BestSeller", "Home", new { @status = 2 })
                    @*Sản phẩm nổi bật*@
                    @Html.Action("Featured", "Home", new { @status = 3 })

                    @Html.Action("Item", "Home", new { @status = 4 })
                </div>
            </div>
        </div>
    </div>
    <!-- Begin Li's Tab Menu Content Area -->
    <div class="container">
        <div class="heading_container">
            <h2>
                ƯU ĐÃI
            </h2>
            <p>
                Danh sách các ưu đãi
            </p>
        </div>
        <!-- Begin Li's Tab Menu Content Area -->
    </div>
</div>
<!-- product-area end -->
<!-- Begin Li's Static Banner Area -->
<div class="li-static-banner li-static-banner-4 text-center pt-20">
    <div class="container">
        <div class="row">
            <!-- Begin Single Banner Area -->
            <div class="col-lg-6">
                <div class="single-banner pb-sm-30 pb-xs-30">
                    <a href="#">
                        <img src="~/Content/CustomerContent/images/banner/offer1.png" alt="Li's Static Banner">
                    </a>
                </div>
            </div>
            <!-- Single Banner Area End Here -->
            <!-- Begin Single Banner Area -->
            <div class="col-lg-6">
                <div class="single-banner">
                    <a href="#">
                        <img src="~/Content/CustomerContent/images/banner/offer2.png" alt="Li's Static Banner">
                    </a>
                </div>
            </div>
            <!-- Single Banner Area End Here -->
        </div>
    </div>
</div>



