@model List<Model.EF.SanPham>
@{
    Layout = null;
}

<script>
</script>
<div id="li-new-product" class="tab-pane active show" role="tabpanel">
    <div class="row">
        <div class="product-active owl-carousel" style="height: 600px">
            @foreach (var item in Model)
            {
                <div class="col-lg-12" style="height: 400px">
                    <!-- single-product-wrap start -->
                    <div class="single-product-wrap">
                        <div class="product-image" style="height: 340px;width: 240px;">
                            <a href="/Product/Detail?id=@item.MaSP" style="height: 340px;width: 240px;">
                                <img src="~/Content/CustomerContent/images/product/large-size/@item.Anh" alt="img!!" style="height: 340px;width: 240px;margin-inline: 10px;">
                            </a>
                            <span class="sticker">HOT</span>
                        </div>
                       
                        <div class="product_desc">
                            <div class="product_desc_info">
                                <h4><a class="product_name" href="/Product/Detail?id=@item.MaSP">@item.TenSP</a></h4>
                                <div class="price-box">
                                    <span class="new-price">@item.DonGia VND</span>
                                </div>
                            </div>
                            <div class="add-actions">
                                <ul class="add-actions-link">
                                    <li class="add-cart active"><a href="/Cart/AddItem?productID=@item.MaSP&quantity=1">Thêm vào giỏ</a></li>
                                    @*<li><a class="links-details" href="single-product.html"><i class="fa fa-heart-o"></i></a></li>
                    <li><a class="quick-view" data-toggle="modal" data-target="#exampleModalCenter" href="#"><i class="fa fa-eye"></i></a></li>*@
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- single-product-wrap end -->
                </div>
            }
        </div>
    </div>
</div>

